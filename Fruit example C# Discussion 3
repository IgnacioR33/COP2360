using System;

namespace Module3Discussion
{
    class Fruit
    {
        public int Age;
        public readonly string Type;
        private string Color;
        public Fruit(string type, string color, int age)
        {
            Type = type;
            Color = color;
            Age = age;
        }
        public void DisplayInfo()
        {
            Console.WriteLine($"Fruit: {Type}");
            Console.WriteLine($"Color: {Color}");
            Console.WriteLine($"Age: {Age} days old");
            Console.WriteLine("-----------------");
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            Fruit apple = new Fruit("Apple", "Red", 3);
            Fruit grape = new Fruit("Grape", "Purple", 2);
            
            apple.DisplayInfo();
            grape.DisplayInfo();
            
            apple.Age = 4;
            grape.Age = 3;
            
            Console.WriteLine($"Apple's new age: {apple.Age}");
            Console.WriteLine($"Grape's new age: {grape.Age}");
        }
    }
}
